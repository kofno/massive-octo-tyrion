<div data-role="header">
  <h1><%= @user.name -%></h1>
</div>

<div id="accounts" data-role="collapsible-set">
  <% for account in @accounts -%>
  <div id="account-<%= account.id -%>" class="account" data-role="collapsible" data-inset="false" data-iconpos="right" data-collapsed-icon="arrow-d" data-expanded-icon="arrow-u">
    <h2>
      <%= account.name -%>
      <span class="balance"><%= number_to_currency(account.balance) -%></span>
    </h2>
  </div>
  <% end -%>
</div>
